<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calendarapp.CalendarController">
    <VBox spacing="10">
        <HBox>
            <Button text="Previous" />
            <Label text="June 2023" />
            <Button text="Next" />
        </HBox>
        <GridPane>
            <Button text="Sun" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button text="Mon" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button text="Tue" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <Button text="Wed" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            <Button text="Thu" GridPane.columnIndex="4" GridPane.rowIndex="0" />
            <Button text="Fri" GridPane.columnIndex="5" GridPane.rowIndex="0" />
            <Button text="Sat" GridPane.columnIndex="6" GridPane.rowIndex="0" />

            <Button text="1" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <!-- ...and so on for the rest of the calendar days... -->
        </GridPane>
    </VBox>
</GridPane>
